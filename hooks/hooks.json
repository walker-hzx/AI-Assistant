{
  "description": "AI Assistant Hooks Configuration",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
            "async": false,
            "description": "Session start hook - initialize plugin context"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/tool-use-logger.sh",
            "async": true,
            "description": "Tool use logger - log tool usage"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/permission-guard.sh",
            "async": false,
            "description": "Permission guard - validate dangerous commands"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Session ended. Thanks for using AI Assistant!'",
            "async": true,
            "description": "Session end hook"
          }
        ]
      }
    ]
  }
}
